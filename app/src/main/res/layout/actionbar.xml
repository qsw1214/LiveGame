<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:orientation="vertical">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:background="@color/appMainColor" android:orientation="horizontal">
        <RelativeLayout android:layout_width="0dp" android:layout_margin="4dp" android:id="@+id/rl_menu_left"
                        android:layout_weight="1"  android:gravity="left|center_vertical"
                        android:layout_height="fill_parent">
            <ImageView android:layout_width="40dp" android:layout_height="40dp" android:id="@+id/iv_menu_leftImg"
                       android:src="@drawable/ic_action_arrow_left"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp"
                        android:layout_weight="1" android:gravity="center"
                        android:layout_height="fill_parent">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_Menu_Title"
                      android:text="标题" android:textColor="#FFFFFF" android:textSize="20sp"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp" android:layout_margin="4dp" android:id="@+id/rl_menu_right"
                        android:layout_weight="1" android:gravity="center_vertical|right"
                        android:layout_height="fill_parent">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="15dp" android:visibility="gone"
                android:id="@+id/tv_menu_right_title"       android:text="标题" android:textColor="#FFFFFF" android:textSize="14sp" />
            <ImageView android:layout_width="40dp" android:layout_height="40dp" android:visibility="gone"     android:id="@+id/iv_menu_right"
                       android:src="@drawable/ic_action_goright"/>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>